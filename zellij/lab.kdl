layout {
    // ─── GLOBAL UI TEMPLATE ──────────────────────────────────────────
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }

    // ─── TAB 1: ANALYSIS (Simplified: Nvim | IPython) ───────────────
    tab name="Analysis" focus=true {
        pane split_direction="vertical" {
            // Main Editor (Left, 60%)
            pane size="60%" command="nvim" {
                args "."
                focus true
            }
            
            // Scientific REPL (Right, 40%)
            pane name="IPython" command="ipython" {
                args "--no-autoindent"
            }
        }
    }

    // ─── TAB 2: DEV (Simulation Build & Run) ────────────────────────
    tab name="Dev" {
        pane split_direction="vertical" {
            pane size="65%" command="nvim" { args "."; }
            pane name="Build" command="bash"
        }
    }

    // ─── TAB 3: GIT (Version Control) ───────────────────────────────
    tab name="Git" {
        pane command="lazygit" // Falls back to shell if not installed
    }

    // ─── TAB 4: PAPER (Writing) ─────────────────────────────────────
    tab name="Paper" {
        pane split_direction="vertical" {
            pane size="70%" command="nvim" { args "."; }
            pane name="Files"
        }
    }
}
